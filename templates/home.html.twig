
{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}

{% block body %}
    <h1>Index</h1>
    <p class="important">
      
    </p>
    
    <div class="row my-5">
        <div class="col-md-8 mx-auto">
        {%for message in app.flashes("success")%}
         <div class="alert alert-success">
         {{message}}
          </div>
        {%endfor%}
            <div class="card">
    <table class="table" border="1">
       <thead>
           <tr>
              <th>ID</th>
              <th>Titre</th>
              <th>Description</th>
           </tr>
       </thead>
       <tbody>
          {% for task in tasks %}
             <tr>
               <td scope="row">{{task.id}}</td>
                  <td>{{task.title}}</td>
                  <td>{{task.body}}</td>
                  <td>
                    <a href="{{path('task_show_route',{id:task.id})}}" class="btn btn-sm btn-primary">
                   <i class="fa fa-eye"></i>
                    </a> 
                     <a href="{{path('update_task',{id:task.id})}}" class="btn btn-sm btn-warning">
                   <i class="fa fa-edit"></i>
                    </a> 
                     <a href="{{path('delete_task',{id:task.id})}}" class="btn btn-sm btn-danger">
                   <i class="fa fa-trash"></i>
                    </a> 
                  </td>
             </tr>
            {% endfor %}
           
            
        </tbody>
    </table>
            </div>
        </div>
    </div>
{% endblock %}
